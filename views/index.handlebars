<h1>Burger Tracker</h1>

<div class="row">

  <div class="col col-sm-4" style="background-color: rgba(243, 243, 250, 0.932);">
  {{>add_burger header="ADD BURGER!"}}

</div>

  <div class="col" style="background-color: rgba(243, 243, 250, 0.932);">

<h2>My Burgers</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{>burger_block eaten="1"}}
  {{/unless}}
  {{/each}}
</ul>

</div>

<div class="col" style="background-color: rgba(243, 243, 250, 0.932);">
<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{>burger_block eaten="0"}}
  {{/if}}
  {{/each}}
</ul>
</div>

</div>

<style>
  .col {
    padding: 20px;
    margin: 10px;
  }

  h2 {
    text-align: center;
  }

  h1 {
    text-align: center;
    font-size: 60px;
    padding: 10px;
  }

  body {
    background-image: url(https://media.giphy.com/media/UAXou95E6oPjW/giphy.gif)
  }
</style>

