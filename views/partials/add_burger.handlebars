<h2>{{header}}</h2>

<form class="create-form" action="/api/burgers" method="POST">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured"></label><br>
    <input type="checkbox" name="devoured" value="1" checked> Devoured?<br>
  </div>

  <button type="submit" id="submit">Add a Burger</button>
</form>